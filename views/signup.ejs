<%-include("partials/header");%>

<div class="signup-page-con container">
  <div class="signup-page row mx-auto">
    <form action="/signup" method="post">
      <h5>Email:</h5>
      <input type="email" class="signup-email" name="username" />

      <h5>First name:</h5>
      <input type="text" class="signup-first-name" name="signupFirstName" />

      <h5>Last name:</h5>
      <input type="text" class="signup-last-name" name="signupLastName" />

      <h5>Password:</h5>
      <input type="password" class="signup-password" name="password" />

      <h5>Confirm password:</h5>
      <input
        type="password"
        class="signup-confirm-password"
        name="signupConfirmPassword"
      />

      <div class="signupErrorMsg">
        <p><%=signupErrorMsg%></p>
      </div>

      <div class="mx-auto signup-button">
        <button class="signup-bttn" type="submit">Sign Up</button>
        <button type="button" id="toLoginPage">Login</button>
        <script type="text/javascript">
          document.getElementById("toLoginPage").onclick = function () {
            location.href = "/login";
          };
        </script>
      </div>
    </form>
  </div>
</div>

<%-include("partials/footer");%>
